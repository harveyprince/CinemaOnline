        <mapping class="com.cinemaonline.model.Identity"/>
        <mapping class="com.cinemaonline.model.Ticket"/>
        <mapping class="com.cinemaonline.model.TicketRecord"/>
        <mapping class="com.cinemaonline.model.VipCard"/>
